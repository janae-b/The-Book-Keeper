<form action="/books/<%= book._id %>?_method=PUT" method="POST">
    <input type="text" value="<%= book.title %>" name="title" placeholder="Title">
    <input type="text" value="<%= book.author %>" name="author" placeholder="Author">
    <input type="checkbox" <%= book.readAgain ? 'checked' : '' %> name="readAgain"><br><br>
    <button type='submit'>Update Puppy</button>
  </form>






