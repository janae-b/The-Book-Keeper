<form action="/messages" method="POST">
  <div class="message-form-group">
    <input 
			type="text"
			class="form-control"
			aria-describedby="message"
			name="title"
			placeholder="Enter message..."
		>
    <button type="submit" class="btn-create btn-warning">Create Post</button>
  </div>
</form>

<% messages.forEach(message => { %>
  <div class="card-message">
    <div class="card-header">
      <%= message.postedBy %> 
			<img id="avatar" width="30" src="<%= message.avatar %>" alt="">
    </div>
    <div class="card-body">
      <h5 class="card-title-message"><%= message.title %></h5>
      <h6><%= message.createdAt.toLocaleString()%></h6>
      <a href="/messages/<%= message._id %>" class="btn btn-primary">See Post</a>
    </div>
  </div>
<% }) %>

