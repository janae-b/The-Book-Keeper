<%- include('../partials/header') %>

<h1>ğŸ“– <%= title %> ğŸ“–</h1>
<div class=message-page>
<h3><%= message.title %></h3>
<h4>
	Posted on <%= message.createdAt.toLocaleString() %> - <%= message.postedBy %>
	<img id="avatar" width="30" src="<%= message.avatar %>" alt="">
</h4>

<% message.replies.forEach(reply => { %>
  <h5>
		<%= reply.message %> - <%= reply.postedBy %> - 
		<%= reply.createdAt.toLocaleString() %> 
		<img id="avatar" width="25" src="<%= reply.avatar %>" alt="">
	</h5>
<% }) %>

<form action="/messages/<%= message._id %>" method="POST">
    <div class="form-group">
        <input 
			type="text"
			class="form-control"
			aria-describedby="message"
			name="message"
			placeholder="Enter reply..."
		>
  	</div>
    <button type="submit" class="btn btn-primary">Reply</button>
</form>
</div>

