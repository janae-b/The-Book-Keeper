<%- include('../partials/header') %>
<div class="profile-page">
<h1>ðŸ“– <%= title %> ðŸ“–</h1>

<div class="profile-card" style="width: 40rem;">
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="profileinfo-tab" data-toggle="tab" href="#profileinfo" role="tab" aria-controls="profileinfo" aria-selected="true">
				My Info
			</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="updateinfo-tab" data-toggle="tab" href="#updateinfo" role="tab" aria-controls="updateinfo" aria-selected="false">
				Update Info
			</a>
    </li>
  </ul>
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="profileinfo" role="tabpanel" aria-labelledby="profileinfo-tab">
      <div class="card-body-profile">
	      <p class="card-text-profile">Name: <%= user.name %></p>
        <p class="card-text-profile">Nickname: <%= user.nickname %></p>
        <p class="card-text-profile">Email: <%= user.email %></p>
        <p class="card-text-profile">Bio: <%= user.bio %></p>
      </div>
    </div>
    <div class="tab-pane fade" id="updateinfo" role="tabpanel" aria-labelledby="updateinfo-tab">
      <div class="card-body">
        <form action="/users/profile?_method=PUT" method="POST">
          <div class="form-row">
            <div class="col-md-4">
              <label class="nickname" for="userNickname">Nickname:</label>
              <input
                type="text"
                id="userNickname"
                class="form-control"
                name="nickname"
                value="<%= user.nickname %>"
              />
            </div>
            <br />
          </div>
          <div class="form-row"> 
          </div>
          <div class="form-row">
            <div class="col-md-12">
              <label class='bio-name' for="bio">Bio:</label>
              <textarea 
                rows="1" 
                id="bio"
                class="form-control"
                name="bio"
              >
                <%= user.bio %>
              </textarea>
            </div>
          </div>
          <button type="submit" class="btn btn-warning">Update</button>
        </form>
      </div>
    </div>
  </div>
</div>
</div>

<%- include('../partials/footer') %>