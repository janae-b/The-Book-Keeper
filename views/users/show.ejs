<%- include('../partials/header') %>

<h3><%= title %></h3>

<div class="card" style="width: 18rem;">
  <% // If our user doesn't have an avatar image, let's use a silly cat pic! %>
  <img 
		id="avatarPhoto"
		style="height: 18rem;"
		class="card-img-top"
		src="<%= userInfo.avatar %>" 
		alt="Card image cap">
  <div class="card-header"></div>
  <div class="card-body">
    <h2 class="card-title"><%= userInfo.nickname %></h2>
    <% // Let's clean up the date data to show the day the user joined %>
    <p class="card-text">
			Joined: <%= userInfo.createdAt.toLocaleString().split(',')[0] %>
		</p>
    <p class="card-text">Books they have read:</p>
    <% // This is where we'll iterate over the games with a forEach %>
    <% books.forEach(book => { %>
      <a href="/books/<%= book._id %>"><%= book.title %></a><br>
    <% }) %><br>


<%- include('../partials/footer') %>